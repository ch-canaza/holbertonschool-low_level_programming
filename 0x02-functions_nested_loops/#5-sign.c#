#include "holberton.h"
/**
 * print_sign - prints the sign of a number
 * @n: input number from which is defined its sign
 *
 * Return: 1 and "+" if n positive, 0 and "0" if n 0, -1 and "-" if n negative
 */

int print_sign(int n)
{
	if (n < 0)
	{
		_putchar('-');
		return (-1);
	}
	else if (n > 0)
	{
		_putchar('+');
		return (1);
	}
	else if (n == 0)
	{
		_putchar('0');
		return (0);
	}
	return (-2);
}
